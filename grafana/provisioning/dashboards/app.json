{
  "title": "App Metrics",
  "uid": "app-metrics",
  "description": "HTTP traffic and Node.js runtime metrics from prom-client",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "graphTooltip": 1,
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "editable": true,
  "tags": ["app"],
  "annotations": { "list": [] },
  "links": [],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "label": "Datasource",
        "type": "datasource",
        "query": "prometheus",
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "refresh": 1,
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "HTTP Traffic",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Request Rate by Route",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8, "spanNulls": false },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total{job=\"app\"}[$__rate_interval])) by (route)",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "HTTP Error Rate (5xx)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": { "lineWidth": 2, "fillOpacity": 15 },
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.01 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total{job=\"app\",status_code=~\"5..\"}[$__rate_interval])) / sum(rate(http_requests_total{job=\"app\"}[$__rate_interval]))",
          "legendFormat": "5xx rate"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Requests by Status Code",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "reqps"
        },
        "overrides": [
          {
            "matcher": { "id": "byFrameRefID", "options": "ERR" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "refId": "OK",
          "expr": "sum(rate(http_requests_total{job=\"app\",status_code=~\"2..\"}[$__rate_interval]))",
          "legendFormat": "2xx"
        },
        {
          "refId": "CLIENT",
          "expr": "sum(rate(http_requests_total{job=\"app\",status_code=~\"4..\"}[$__rate_interval]))",
          "legendFormat": "4xx"
        },
        {
          "refId": "ERR",
          "expr": "sum(rate(http_requests_total{job=\"app\",status_code=~\"5..\"}[$__rate_interval]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "id": 10,
      "type": "row",
      "title": "Latency",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Request Duration Percentiles (all routes)",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 5 },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"app\"}[$__rate_interval])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=\"app\"}[$__rate_interval])) by (le))",
          "legendFormat": "p90"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"app\"}[$__rate_interval])) by (le))",
          "legendFormat": "p95"
        },
        {
          "refId": "D",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"app\"}[$__rate_interval])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "p95 Latency by Route",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"app\"}[$__rate_interval])) by (le, route))",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "id": 11,
      "type": "row",
      "title": "Node.js Runtime",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Event Loop Lag",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "nodejs_eventloop_lag_p50_seconds{job=\"app\"}",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "nodejs_eventloop_lag_p90_seconds{job=\"app\"}",
          "legendFormat": "p90"
        },
        {
          "refId": "C",
          "expr": "nodejs_eventloop_lag_p99_seconds{job=\"app\"}",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Heap Usage",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "nodejs_heap_size_used_bytes{job=\"app\"}",
          "legendFormat": "used"
        },
        {
          "refId": "B",
          "expr": "nodejs_heap_size_total_bytes{job=\"app\"}",
          "legendFormat": "total"
        },
        {
          "refId": "C",
          "expr": "process_resident_memory_bytes{job=\"app\"}",
          "legendFormat": "RSS"
        }
      ]
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 19 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "percentunit"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "single" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(process_cpu_seconds_total{job=\"app\"}[$__rate_interval])",
          "legendFormat": "CPU"
        }
      ]
    },
    {
      "id": 12,
      "type": "row",
      "title": "GC & Handles",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "GC Duration",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(nodejs_gc_duration_seconds_sum{job=\"app\"}[$__rate_interval])",
          "legendFormat": "{{gc_type}}"
        }
      ]
    },
    {
      "id": 14,
      "type": "timeseries",
      "title": "Active Handles & Requests",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 8 },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "nodejs_active_handles{job=\"app\"}",
          "legendFormat": "active handles"
        },
        {
          "refId": "B",
          "expr": "nodejs_active_requests{job=\"app\"}",
          "legendFormat": "active requests"
        }
      ]
    }
  ]
}
